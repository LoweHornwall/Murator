<h1><%= @user.name %></h1>  
This user has <%= pluralize(@user.curation_pages.size, "page") %>
<% if current_user?(@user) %>
  <%= link_to "Create new curation page", new_curation_page_path, class: "btn btn-primary" %>
<% end %>

<div>
  <ul class="curation_pages">
    <%= render @curation_pages %>
  </ul>
  <%= will_paginate @curation_pages %>
</div>
