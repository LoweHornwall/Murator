<%= form_for @curation_page do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= render "category_select", categories: @all_categories, f: f %> 
  <%= f.hidden_field :selected_categories, class: "selected-categories-field", value: "" %>

  <%= f.submit "Create curation page", class: "btn btn-primary" %>
<% end %>