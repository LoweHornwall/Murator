<h1><%= @review.release_group.release %></h1>
<p><%= simple_format(@review.content) %></p>
<p><b><%= @review.rating %>/10</b></p>
From Curation Page <%= link_to @review.curation_page.name, curation_page_path(@review.curation_page) %>
<% if current_user?(@review.curation_page.user) %>
  <%= link_to "Edit", edit_curation_page_review_path(@review.curation_page, @review) %>
  <%= link_to "Delete", curation_page_review_path(@review.curation_page, @review), method: :delete, data: { confirm: "You sure?"} %>
<% end %>